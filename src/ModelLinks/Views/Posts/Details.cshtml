@model ModelLinks.Models.Post

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Body)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Body)
        </dd>
    </dl>
</div>
@{ 
    var currentPost = Model.PostId;
}
<div>
    <form method="post" action="/Comments/Add" enctype="multipart/form-data">
        <div class="form-horizontal">
            <h4>Add Comment</h4>
            <hr />
            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostId" />
            <div class="form-group">
                <label asp-for="Subject" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Subject" class="form-control" value=""/>
                    <span asp-validation-for="Subject" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Body" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Body" class="form-control"  value="" />
                    <span asp-validation-for="Body" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
</div>
<div>
    <h4>Comments</h4>
    <hr/>
    <dl class="dl-horizontal">
        @{
            if (ViewBag.Comments != null)
            {
                <table class="table-condensed">
                    <thead>
                        <tr>
                            <th>Subject</th>
                            <th>Body</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var current in ViewBag.Comments)
                        {
                            <tr>
                                <td>@current.Subject</td>
                                <td>@current.Body</td>
                                <td><a asp-action="Edit" asp-controller="Comments" asp-route-id="@current.CommentId">Edit</a></td>
                                <td>@Html.ActionLink("Delete", "Delete", "Comments", new { id = current.CommentId }, null)</td>
                            </tr>
                        }
                    </tbody>
                </table>

            }
        }
    </dl>
</div>
<hr/>
<p>
    <a asp-action="Edit" asp-route-id="@Model.PostId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}